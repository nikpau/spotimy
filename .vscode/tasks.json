{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Javascript: Install",
      "type": "shell",
      "command": "pnpm install",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "API: Generate",
      "type": "shell",
      "command": "buf generate",
      "problemMatcher": [],
